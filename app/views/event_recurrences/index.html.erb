<h1>Listing event_recurrences</h1>

<table>
  <thead>
    <tr>
      <th>Bill</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Every</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_recurrences.each do |event_recurrence| %>
      <tr>
        <td><%= event_recurrence.object_id %></td>
        <td><%= event_recurrence.start_date %></td>
        <td><%= event_recurrence.end_date %></td>
        <td><%= event_recurrence.every %></td>
        <td><%= link_to 'Show', event_recurrence %></td>
        <td><%= link_to 'Edit', edit_event_recurrence_path(event_recurrence) %></td>
        <td><%= link_to 'Destroy', event_recurrence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

